{
  "manifest_version": 3,
  "name": "Meme Break",
  "version": "1.0",
  "description": "Get periodic meme popups to stay entertained during work sessions",
  "permissions": [
    "storage", 
    "activeTab", 
    "alarms", 
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://meme-api.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meme Break Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}